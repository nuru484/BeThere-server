generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum role {
  ADMIN
  USER
}

model UserIdentification {
  id             Int    @id @default(autoincrement())
  identityNumber String @unique
  user           User?  @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId         Int?   @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id             Int     @id @default(autoincrement())
  firstName      String  @db.VarChar(255)
  lastName       String  @db.VarChar(255)
  password       String
  email          String  @unique
  profilePicture String? @db.VarChar(255)
  phoneNumber    String? @unique
  faceScan       Json?
  role           role    @default(USER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  identification UserIdentification?
  Attendance     Attendance[]
}

model Event {
  id             Int       @id @default(autoincrement())
  title          String
  description    String?
  startDate      DateTime?
  endDate        DateTime?
  startTime      String
  endTime        String
  location       Location  @relation(fields: [locationId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  locationId     Int
  type           String
  isRecurring    Boolean   @default(false)
  recurrenceRule String? 
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  sessions       Session[]
}

model Session {
  id        Int      @id @default(autoincrement())
  eventId   Int
  date      DateTime
  startTime String
  endTime   String?

  event       Event        @relation(fields: [eventId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  attendances Attendance[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([eventId, date])
}

model Location {
  id        Int     @id @default(autoincrement())
  name      String
  latitude  Float
  longitude Float
  city      String?
  country   String?
  events    Event[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([city])
  @@index([country])
  @@index([name])
  @@index([latitude, longitude])
}

model Attendance {
  id        Int     @id @default(autoincrement())
  attended  Boolean @default(false)
  userId    Int
  sessionId Int

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  session Session @relation(fields: [sessionId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, sessionId])
}
